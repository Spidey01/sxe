{
    "project": "pc",
    "version": "0",
    "type": "cxx_library",
    "dependencies": [
        "SxE_core"
    ],
    "sources": [
        "src/PcConfiguration.cpp",
        "src/PcDisplay.cpp",
        "src/PcInputManager.cpp"
    ],
    "headers": [
        "include/sxe"
    ],
    "headers_strip_prefix": "include",
    "gcc": {
        "targetName": "SxE_pc",
        "cppflags": [
            "$sxe_gcc_cppflags",
            "-DSXE_DLL_EXPORTS",
            "-I$sourcedir/src",
            "-I$sourcedir/include"
        ],
        "cxxflags": "$sxe_gcc_cxxflags",
        "ldflags": "$sxe_gcc_ldflags",
        "ldlibs": "$sxe_gcc_ldlibs"
    },
    "msvc": {
        "targetName": "SxE_pc",
        "cppflags": [
            "$sxe_msvc_cppflags",
            "/DSXE_DLL_EXPORTS",
            "/I$sourcedir/src",
            "/I$sourcedir/include"
        ],
        "cxxflags": "$sxe_msvc_cxxflags",
        "ldflags": "$sxe_msvc_cxxflags",
        "ldlibs": "$sxe_msvc_ldlibs glfw3dll.lib SxE_core.lib"
    }
}
