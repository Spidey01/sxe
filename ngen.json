{
    "project": "examples",
    "version": "2.0",
    "type": "package",
    "sources": [
        "core",
        "pc",
        "demos"
    ],
    "variables": [
        "sxe_gcc_comment = Default gcc flags.",

        "sxe_gcc_defines = -DSXE_DLL",
        "sxe_gcc_includes = -I$distdir/include",
        "sxe_gcc_cppflags = $sxe_gcc_defines $sxe_gcc_includes",
        "sxe_gcc_cxxflags = -std=c++17 -Wall -ggdb3 -fvisibility=hidden",
        "sxe_gcc_ldflags = -L$distdir/lib",
        "sxe_gcc_ldlibs = -lboost_filesystem",

        "sxe_msvc_comment = Default msvc flags.",

        "sxe_msvc_defines = /DWIN32 /D_WINDOWS /DSXE_DLL",
        "sxe_msvc_includes = /I$distdir/include /I$distdir/include/boost-1_71",
        "sxe_msvc_cppflags = $sxe_msvc_defines $sxe_msvc_includes",
        "sxe_msvc_cxxflags = /std:c++17 /W4 /wd4251 /GR /EHsc /FS /Zi /Ob0 /Od",
        "sxe_msvc_ldflags = ",
        "sxe_msvc_ldlibs = /MD /FS /link /libpath:$distdir/lib",

        "sxe_notes = SXE_DLL must be defined for shared libraries."
    ]
}

