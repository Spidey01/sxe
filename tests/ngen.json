{
    "project": "tests",
    "version": "0",
    "description": "SxE test runner.",
    "type": "cxx_application",
    "dependencies": [
        "SxE"
    ],
    "sources": [
        "cmds/CommandTest.cpp",
        "common/NotificationManagerTest.cpp",
        "common/SubsystemTest.cpp",
        "config/SettingsExpanderTest.cpp",
        "config/SettingsFileTest.cpp",
        "config/SettingsFixture.cpp",
        "config/SettingsListenerTest.cpp",
        "config/SettingsMapTest.cpp",
        "config/SettingsXMLFileTest.cpp",
        "graphics/DisplayModeTest.cpp",
        "input/InputCodeTest.cpp",
        "input/InputFacetTest.cpp",
        "input/InputManagerTest.cpp",
        "sys/PlatformTest.cpp",
        "sys/XdgTest.cpp",
        "main.cpp"
    ],
    "gcc": {
        "targetName": "sxe-test-runner",
        "cppflags": [
            "$sxe_gcc_cppflags",
            "-I$sourcedir/src",
            "-I$sourcedir/include"
        ],
        "cxxflags": "$sxe_gcc_cxxflags",
        "ldflags": "$sxe_gcc_ldflags",
        "ldlibs": "$sxe_gcc_ldlibs -lSxE -lcppunit"
    },
    "msvc": {
        "comment": "msvc cppunit stuff not ready yet",
        "targetName": "sxe-test-runner",
        "cppflags": [
            "$sxe_msvc_cppflags",
            "/I$sourcedir/src",
            "/I$sourcedir/include",
            "/DCPPUNIT_DLL"
        ],
        "cxxflags": "$sxe_msvc_cxxflags",
        "ldflags": "$sxe_msvc_cxxflags",
        "ldlibs": "$sxe_msvc_ldlibs SxE.lib cppunit_dll.lib"
    }
}

