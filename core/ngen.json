{
    "project": "core",
    "version": "0",
    "type": "cxx_library",
    "dependencies": [
        "vendor"
    ],
    "sources": [
        "src/Game.cpp",
        "src/GameEngine.cpp",
        "src/RateCounter.cpp",
        "src/common/Subsystem.cpp",
        "src/config/Settings.cpp",
        "src/config/SettingsFile.cpp",
        "src/config/SettingsMap.cpp",
        "src/config/SettingsXMLFile.cpp",
        "src/graphics/Display.cpp",
        "src/graphics/DisplayMode.cpp",
        "src/graphics/FrameEndedListener.cpp",
        "src/graphics/FrameStartedListener.cpp",
        "src/logging/Log.cpp",
        "src/logging/LogSink.cpp",
        "src/sys/FileSystem.cpp",
        "src/sys/Platform.cpp",
        "src/sys/Xdg.cpp",
        "src/testing/NullConfiguration.cpp",
        "src/testing/NullDisplay.cpp"
    ],
    "headers": [
        "include/sxe"
    ],
    "headers_strip_prefix": "include",
    "gcc": {
        "targetName": "SxE_core",
        "cppflags": [
            "$sxe_gcc_cppflags",
            "-DSXE_DLL_EXPORTS",
            "-I$sourcedir/src",
            "-I$sourcedir/include"
        ],
        "cxxflags": "$sxe_gcc_cxxflags",
        "ldflags": "$sxe_gcc_ldflags",
        "ldlibs": "$sxe_gcc_ldlibs"
    },
    "msvc": {
        "targetName": "SxE_core",
        "cppflags": [
            "$sxe_msvc_cppflags",
            "/DSXE_DLL_EXPORTS",
            "/I$sourcedir/src",
            "/I$sourcedir/include"
        ],
        "cxxflags": "$sxe_msvc_cxxflags",
        "ldflags": "$sxe_msvc_cxxflags",
        "ldlibs": "$sxe_msvc_ldlibs"
    }
}
