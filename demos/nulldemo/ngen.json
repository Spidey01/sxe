{
    "project": "nulldemo",
    "version": "0",
    "type": "cxx_application",
    "dependencies": [
        "core"
    ],
    "sources": [
        "src/main.cpp",
        "src/NullDemo.cpp"
    ],
    "gcc": {
        "cppflags": [
            "-I$distdir/include",
            "-DSXE_DLL"
        ],
        "cxxflags": [
            "-std=c++17",
            "-Wall",
            "-ggdb3"
        ],
        "ldflags": [
            "-L$distdir/lib"
        ],
        "ldlibs": [
            "-lboost_filesystem"
        ]
    },
    "msvc": {
        "cppflags": [
            "/I$distdir/include",
            "/I$distdir/include/boost-1_71",
            "/DSXE_DLL",
            "/DWIN32",
            "/D_WINDOWS"
        ],
        "cxxflags": [
            "/std:c++17",
            "/W4",
            "/wd4251",
            "/GR", "/EHsc",
            "/FS"
        ],
        "ldflags": [
            "/MD",
            "/FS",
            "/link",
            "/libpath:$distdir/lib"
        ],
        "ldlibs": [
            "core.lib"
        ]
    }
}
