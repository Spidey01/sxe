{
    "project": "quad",
    "version": "0",
    "type": "cxx_application",
    "dependencies": [
        "SxE"
    ],
    "sources": [
        "src/Quad.cpp",
        "src/QuadGame.cpp",
        "src/main.cpp"
    ],
    "install_files": [
        { "input": "QuadGame.cfg", "output": "$sysconfdir/xdg/QuadGame.cfg" },
        { "input": "share/Quad.dat", "output": "$datadir/QuadGame/Quad.dat" }
    ],
    "gcc": {
        "cppflags": [
            "$sxe_gcc_cppflags",
            "-I$sourcedir/src",
            "-I$sourcedir/include"
        ],
        "cxxflags": "$sxe_gcc_cxxflags",
        "ldflags": "$sxe_gcc_ldflags",
        "ldlibs": "$sxe_gcc_ldlibs -lSxE"
    },
    "msvc": {
        "cppflags": [
            "$sxe_msvc_cppflags",
            "/I$sourcedir/src",
            "/I$sourcedir/include"
        ],
        "cxxflags": "$sxe_msvc_cxxflags",
        "ldflags": "$sxe_msvc_cxxflags",
        "ldlibs": "$sxe_msvc_ldlibs SxE.lib"
    }
}

