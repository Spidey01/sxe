{
    "project": "quad",
    "version": "0",
    "type": "cxx_application",
    "dependencies": [
        "SxE_pc"
    ],
    "sources": [
        "src/main.cpp",
        "src/QuadGame.cpp"
    ],
    "gcc": {
        "cppflags": [
            "$sxe_gcc_cppflags",
            "-I$sourcedir/src",
            "-I$sourcedir/include"
        ],
        "cxxflags": "$sxe_gcc_cxxflags",
        "ldflags": "$sxe_gcc_ldflags",
        "ldlibs": "$sxe_gcc_ldlibs -lSxE_core -lSxE_pc"
    },
    "msvc": {
        "cppflags": [
            "$sxe_msvc_cppflags",
            "/I$sourcedir/src",
            "/I$sourcedir/include"
        ],
        "cxxflags": "$sxe_msvc_cxxflags",
        "ldflags": "$sxe_msvc_cxxflags",
        "ldlibs": "$sxe_msvc_ldlibs SxE_core.lib SxE_pc.lib"
    }
}

